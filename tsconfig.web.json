{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "include": [
    "src/renderer/src/env.d.ts",
    "src/renderer/src/**/*",
    "src/renderer/types/*",
    "src/renderer/src/**/*.vue",
    "src/preload/*.d.ts"
  ],
  "exclude": ["node_modules", "out", "build", "**/*.js"],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@renderer/*": [
        "src/renderer/src/*"
      ],
      "#renderer/*": [
        "src/renderer/types/*"
      ],
      "@/*":[
        "src/*"
      ]
    },
    "types": ["element-plus/global"]
  }
}
